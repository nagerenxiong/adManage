<% include header %>
<style type="text/css" media="screen">
h3 {
        width: 14em;
        padding: .3em;
    }
    select {
        width: 20em;
    }
    .text {
        width: 40em;
        font-size: 1em;
        padding: .6em;
    }
    .tip {
        margin-left: 12px;
        padding: .3em;
        display: inline-block;
    }
    #ggContent {
        height: 15em;
        width: 60em;
    }
    #clear{
        top: -2.6em;
        left: -.6em;
    }
    #ggWidth, #ggHeight {
        width: 5em;
    }
    label{
        display: block;
    }
    .dialogText{
        font-size: 1em;
        padding: .3em;
    }
    #textContent{
        width: 95%;
