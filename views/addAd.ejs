        line-height: 1.8em;
        overflow: hidden;
    }
    .yulan{
        cursor: pointer;
    }
    .ui-tooltip {
        max-width: 1200px;
        word-break: break-all;
    }
     .ggContent{
        height: 15em;
        width: 60em;
    }
 </style>
<div class="fullScreen">
    <h2 class="ptb hd ui-widget-content">新建广告</h2>
    <form>
        <div class="plr ptb">
            <h3 class="fl">广告名称</h3>
             <%  if(typeof adv !== 'undefined' ){%>
            <input class="text fl ui-widget-content ui-corner-all" id="name" placeholder="不超过80个汉字" value="<%=adv[0]['name']%>">
             <%}else {%>
             <input class="text fl ui-widget-content ui-corner-all" id="name" placeholder="不超过80个汉字">
             <% } %>
            <span class="tip clear">* 不超过80个汉字</span>
        </div>
        <div class="plr ptb clear">
            <h3 class="fl">工具</h3>
            <button type="button" class="button ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" id="textGG" role="button">
                <span class="ui-button-text">
                    <span class="ui-button-text">文字</span>
                </span>
            </button>
            <button type="button" class="button ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" id="imgGG" role="button">
                <span class="ui-button-text">
                    <span class="ui-button-text">图片</span>
                </span>
            </button>
        </div>
         <%  if(typeof adv !== 'undefined' ){%>
        <div class="plr ptb">
            <h3 class="fl">广告html</h3>
            <textarea class="text fl ui-widget-content ui-corner-all ggContent"  id="html" placeholder="不超过10000"><%=adv[0]['html']%></textarea>
            <span class="ui-icon ui-icon-circle-close rePos"  style="cursor: pointer;" title="清空"></span>
        </div>
         <%}else {%>
         <div class="plr ptb">
            <h3 class="fl">广告代码</h3>
            <textarea class="text fl ui-widget-content ui-corner-all ggContent"  id="html" placeholder="不超过10000"></textarea>
            <span class="ui-icon ui-icon-circle-close rePos"  style="cursor: pointer;" title="清空"></span>
        </div>
         <%}%>
          <div style="clear:both"></div>
        <div class="plr ptb">
            <h3 class="fl">广告分类</h3>
            <p class="fl">
                <select class="selectmenu" id="ggLei" style="display: none;">
               <% for(var i=0;i<categoryList.length;i++){%>
                 <%  if(typeof adv !== 'undefined' ){%>
                    <% if(categoryList[i]["id"]==adv[0]["catId"]){ %>
                    <option selected value="<%=categoryList[i]["id"]%>" ><%=categoryList[i]["name"]%></option>
                    <%}else{%>
                    <option value="<%=categoryList[i]["id"]%>" ><%=categoryList[i]["name"]%></option>
                    <%}%>
                <% }else{ %>
                  <option value="<%=categoryList[i]["id"]%>" ><%=categoryList[i]["name"]%></option>
                <% } %>
                <% } %>
                </select>
            </p>
            <span class="tip clear">&nbsp;</span>
        </div>
        <div class="plr ptb">
            <h3 class="fl"></h3>
              <%  if(typeof adv !== 'undefined' ){%>
            <button type="button" class="button ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" id="update" role="button"><span class="ui-button-text"><span class="ui-button-text"> 完 成 </span></span></button>
            <input type="hidden" id="id" name="" value="<%=id%>">
            <%}else{%>
            <button type="button" class="button ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" id="submit" role="button"><span class="ui-button-text"><span class="ui-button-text"> 完 成 </span></span></button>
            <%}%>
        <!--     <button type="button" class="button ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" id="reset" role="button"><span class="ui-button-text"><span class="ui-button-text"> 重 置 </span></span></button> -->
            <span class="tip clear"></span>
        </div>
    </form>
</div>
<div  id="photoDialog" class="ui-dialog ui-widget ui-corner-all ui-front ui-dialog-buttons ui-draggable ui-resizable" tabindex="-1" role="dialog" aria-describedby="dialog_imgGG" aria-labelledby="ui-id-3" style="display: none;border-radius:0">
    <div id="dialog_imgGG" class="hide ui-dialog-content ui-widget-content" style="display: block; width: auto; min-height: 36px; max-height: none; height: auto;padding-right: 0">
        <p class="mtb">
            <label>图片文件：</label>
            <input id="imgUrl" class="dialogText ui-widget-content ui-corner-all" id="imgUrl" value="">
            <iframe id="imgUp" class="dialogText ui-widget-content ui-corner-all" src="/upload" frameborder="0" scrolling="no" height="90px" width="95%"></iframe>
           <!--  <button class="button ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" id="selectImgs" role="button">
                <span class="ui-button-text">图库中选择</span>
            </button> -->
        </p>
        <p class="mtb">
            <label>图片尺寸：</label>
            <input id="imgW" class="dialogText ui-widget-content ui-corner-all">
            宽×
            <input id="imgH" class="dialogText ui-widget-content ui-corner-all">高(px)</p>
        <p class="mtb">
            <label>图片描述：</label>
            <input id="imgAlt" class="dialogText ui-widget-content ui-corner-all"></p>
        <p class="mtb">
            <label>点击链接：</label>
            <input id="imgLink" value="http://" class="dialogText ui-widget-content ui-corner-all"></p>
        <p class="buttonset mtb ui-buttonset">
            <label>目标窗口：</label>
            <input type="radio" id="imgTag1" value="_blank" name="imgTag" checked="checked" class="ui-helper-hidden-accessible">
            <label for="imgTag1" class="ui-state-active ui-button ui-widget ui-state-default ui-button-text-only ui-corner-left" role="button">
                <span class="ui-button-text">新窗口</span>
            </label>
            <input type="radio" id="imgTag2" value="_self" name="imgTag" class="ui-helper-hidden-accessible">
            <label for="imgTag2" class="ui-button ui-widget ui-state-default ui-button-text-only ui-corner-right" role="button">
                <span class="ui-button-text">原窗口</span>
            </label>
        </p>
    </div>
    <div class="ui-dialog-buttonpane ui-widget-content ui-helper-clearfix">
        <div class="ui-dialog-buttonset">
            <button type="button" id="generateCode" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" role="button">
                <span class="ui-button-text">生成原代码</span>
            </button>
            <button type="button" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only closeBtn" role="button">
                <span class="ui-button-text">取消</span>
            </button>
        </div>
    </div>
</div>

<div id="fontDialog" class="ui-dialog ui-widget ui-corner-all ui-front ui-dialog-buttons ui-draggable ui-resizable" tabindex="-1" role="dialog" aria-describedby="dialog_textGG" aria-labelledby="ui-id-2" style="display: none;border-radius:0">
    <div id="dialog_textGG" class="hide ui-dialog-content ui-widget-content" style="display: block; width: auto; min-height: 35px; max-height: none; height: auto;width:396px;">
        <p class="mtb">
            <label>文字内容：</label>
            <textarea class="dialogText ui-widget-content ui-corner-all" id="textContent"></textarea>
        </p>
        <p class="mtb">
            <label>文字大小：</label>
            <input id="textSize" value="12" class="dialogText ui-widget-content ui-corner-all">
        </p>
        <p class="mtb">
            <label>点击链接：</label>
            <input id="textLink" value="http://" class="dialogText ui-widget-content ui-corner-all"></p>
        <p class="buttonset mtb ui-buttonset">
            <label>目标窗口：</label>
            <input type="radio" id="textTag1" value="_blank" name="textTag" checked="checked" class="ui-helper-hidden-accessible">
            <label for="textTag1" class="ui-state-active ui-button ui-widget ui-state-default ui-button-text-only ui-corner-left" role="button">
                <span class="ui-button-text">新窗口</span>
            </label>
            <input type="radio" id="textTag2" value="_self" name="textTag" class="ui-helper-hidden-accessible">
            <label for="textTag2" class="ui-button ui-widget ui-state-default ui-button-text-only ui-corner-right" role="button">
                <span class="ui-button-text">原窗口</span>
            </label>
        </p>
    </div>
    <div class="ui-dialog-buttonpane ui-widget-content ui-helper-clearfix">
        <div class="ui-dialog-buttonset">
            <button type="button" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" role="button" id="generateCode1">
                <span class="ui-button-text">生成原代码</span>
            </button>
            <button type="button" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only closeBtn" role="button">
                <span class="ui-button-text">取消</span>
            </button>
        </div>
    </div>
</div>
