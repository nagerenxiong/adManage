<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>上传</title>
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	 <link rel="stylesheet" type="text/css" href="/stylesheets/ui.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/common.css">
    <script src="/javascripts/jquery-1.9.1.min.js" type="text/javascript" charset="utf-8" ></script>
</head>
<body>
	<form enctype="multipart/form-data" method="POST" >
        <input type="hidden" name="menu" value="upload">
        <input type="hidden" name="MAX_FILE_SIZE" value="2097152">
        <input id="userFile" class="button ui-button ui-widget ui-state-default ui-corner-all" name="userfile" type="file" role="button" style="width:100%">
    </form>
    <img src="" id="img" alt=""  style="display:none">
    <input type="hidden" id="imgUrl" value="<%=files%>">
    <script>
        $("#userFile").change(function () {
            if ($(this).val()) {
                $("form").submit();
            }
        });
        var uploadPath=$("#imgUrl").val();
        if(uploadPath!="false"){
        	uploadPath=uploadPath.replace(/public\\/g,"").replace(/\\/g,"/");
		    $("#img").attr('src',"http://localhost:5000/"+uploadPath);
    	    $("#imgUrl", window.parent.document).val("http://localhost:5000/"+uploadPath);
    	    setTimeout(function(){
		    $("#imgW", window.parent.document).val(document.getElementById("img").width);
		    $("#imgH", window.parent.document).val(document.getElementById("img").height);
    	    },1000)
        }
</script>
</body>
</html>